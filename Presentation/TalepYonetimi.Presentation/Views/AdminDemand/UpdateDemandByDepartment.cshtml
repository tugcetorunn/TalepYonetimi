@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>GÜNCELLE</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Güncelle</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Güncelle</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="quickForm" asp-controller="Admin" asp-action="UpdateDemandByDepartment" method="POST">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputCustomer1">Müşteri</label>
                                <input type="text" name="customer" class="form-control" id="exampleInputCustomer1" placeholder="Müşteri ismini girin">
                            </div>
                            <div class="form-group">
                                <label for="product">Ürün</label>
                                <select class="custom-select mr-sm-2" value="product" id="product">
                                    <option selected value="0">ERPOne </option>
                                    <option value="1">ERPMoldy</option>
                                    <option value="2">ERPCnc</option>
                                    <option value="3">ERPSuite</option>
                                    <option value="4">ERPBoys</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="demandType">Talep Türü</label>
                                <select class="custom-select mr-sm-2" value="demandType" id="demandType">
                                    <option selected value="0">Demo Talebi</option>
                                    <option value="1">Satınalma Talebi</option>
                                    <option value="2">Eğitim Talebi</option>
                                    <option value="3">Özelleştirme Talebi</option>
                                    <option value="4">Çözüm Talebi</option>
                                    <option value="5">İptal Talebi</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                <input type="email" name="email" class="form-control" id="exampleInputEmail1" placeholder="Emailinizi girin">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhone1">Telefon</label>
                                <input type="tel" name="phone" class="form-control" id="exampleInputPhone1" placeholder="Telefon numaranızı girin">
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Düzenle</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TalepYonetimi.Presentation</title>
    <link rel="stylesheet" href="~/presentation/css/styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="formbold-main-wrapper" style="margin-top: 0px !important; padding-top: 0px !important">
        <div class="formbold-form-wrapper" style="margin-top: 0px; padding-top: 0px !important">
        <img src="~/presentation/img/talep.png" style="width: 490px !important">
        <form action="https://formbold.com/s/FORM_ID" method="POST">
          <div class="formbold-input-group">
            <label for="name" class="formbold-form-label"> İsim </label>
            <input
              type="text"
              name="name"
              id="name"
              placeholder="İsminizi giriniz"
              class="formbold-form-input"
            />
          </div>

          <div class="formbold-input-group">
              <label for="name" class="formbold-form-label"> Soyisim </label>
              <input 
              type="text"
              name="lastname"
              id="lastname"
              placeholder="Soyisminizi giriniz"
              class="formbold-form-input" />
          </div>

          <div class="formbold-input-group">
            <label for="email" class="formbold-form-label"> Email </label>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Mail adresinizi giriniz"
              class="formbold-form-input"
            />
          </div>

          <div class="formbold-input-group">
            <label for="phone" class="formbold-form-label"> Telefon </label>
            <input
              type="tel"
              name="phone"
              id="phone"
              placeholder="Telefon numaranızı giriniz"
              class="formbold-form-input"
              pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" />
          </div>

          <div class="formbold-input-group">
            <label class="formbold-form-label">
              Hangi ürünümüz için talepte bulunuyorsunuz? Seçiniz.
            </label>

            <select class="formbold-form-select" name="product" id="product"> @* request, talep tablosuna ürün property si olarak kaydedilecek. *@
                @{
                    
                }
              <option value="Student">Student</option>
            </select>
          </div>

          <div class="formbold-input-radio-wrapper">
            <label for="demandType" class="formbold-form-label">
              Nasıl bir talepte bulunmak istiyorsunuz?
            </label>

            <div class="formbold-radio-flex">
              <div class="formbold-radio-group">
                <label class="formbold-radio-label">
                  <input
                    class="formbold-input-radio"
                    type="radio"
                    name="demandType"
                    id="demandType"
                  />
                  Yes
                  <span class="formbold-radio-checkmark"></span>
                </label>
              </div>
            </div>
          </div>

          @* <div class="formbold-input-radio-wrapper">
            <label class="formbold-form-label">
              Which languages & freameworks you know?
            </label>

            <div class="formbold-radio-flex">
              <div class="formbold-radio-group">
                <label class="formbold-radio-label" for="c">
                  <input
                    class="formbold-input-radio"
                    type="checkbox"
                    name="c"
                    id="c"
                  />
                  C
                  <span class="formbold-radio-checkmark"></span>
                </label>
              </div>
            </div>
          </div> *@

          <div>
            <label for="message" class="formbold-form-label">
              Talebiniz ile ilgili detayları yazınız
            </label>
            <textarea
              rows="6"
              name="message"
              id="message"
              placeholder="Buraya yazınız..."
              class="formbold-form-input"
            ></textarea>
          </div>

          <button class="formbold-btn">Submit</button>
        </form>
      </div>
    </div>
    @RenderBody()
</body>
</html>
